{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "namespace": { "type": "string" },
    "auth": {
      "type": "object",
      "properties": { "enabled": { "type": "boolean" } },
      "additionalProperties": true
    },
    "secretsProvider": { "type": "string", "enum": ["internal", "external"] },
    "cassandra": {
      "type": "object",
      "properties": {
        "clusterName": { "type": "string" },
        "serverVersion": { "type": "string" },
        "mgmtAPIHeap": { "type": "string" },
        "defaultResources": { "type": "object" }
      }
    },
    "datacenters": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "size"],
        "properties": {
          "name": { "type": "string" },
          "size": { "type": "integer" },
          "serverVersion": { "type": "string" }
        }
      }
    },
    "externalSecrets": { "type": "object" }
  }
}
